@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Identity Role Manager";
}

<h2>Identity Role Manager</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Users</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                No roles
            </td>
        </tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <a class="btn btn-sm btn-success" asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id">
                        Edit
                    </a>
                    <a class="btn btn-sm btn-danger" asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id">
                        Delete
                    </a>
                </td>
            </tr>
        }
    }
</table>

<a class="btn btn-primary" asp-controller="Role" asp-action="Create">
    Create
</a>
<a class="btn btn-primary" asp-controller="Home" asp-action="Index">
    Home
</a>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
